{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6"
    ],
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist"
    ]
}
